{
  "name": "Persistent Memory Integration",
  "version": "1.0.0",
  "description": "Automatic memory tracking for Cursor IDE conversations",
  "author": "Persistent Memory System",

  "hooks": {
    "onMessage": {
      "command": "python cursor_memory_hook.py",
      "args": ["{role}", "{content}", "{conversation_id}"],
      "async": true,
      "silent": true
    },

    "onConversationStart": {
      "command": "python auto_bootstrap.py",
      "async": false,
      "silent": false
    },

    "onConversationEnd": {
      "command": "python -c \"from memory_integration import MemoryIntegration; MemoryIntegration().memory_system.force_save()\"",
      "async": true,
      "silent": true
    }
  },

  "settings": {
    "autoTrackMessages": true,
    "autoBootstrap": true,
    "forceSaveOnExit": true,
    "memoryPath": "vector_memory",
    "batchSaveInterval": 10
  },

  "capabilities": {
    "memoryQuery": true,
    "conversationTracking": true,
    "autoCapture": true,
    "healthMonitoring": true
  }
}
